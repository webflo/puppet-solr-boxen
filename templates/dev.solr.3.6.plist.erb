<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.solr.3.6</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Apache Solr 3.6</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string>/opt/boxen/bin/java</string>
      <string>-Djetty.home=/opt/boxen/homebrew/Cellar/solr36/3.6.2-boxen1/libexec/example</string>
      <string>-Djetty.logs=/opt/boxen/homebrew/var/logs/solr36</string>
      <string>-Dsolr.solr.home=/opt/boxen/homebrew/etc/solr36/multicore</string>
      <string>-jar</string>
      <string>/opt/boxen/homebrew/Cellar/solr36/3.6.2-boxen1/libexec/example/start.jar</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <false />

    <key>LaunchOnlyOnce</key>
    <true/>

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>WorkingDirectory</key>
    <string>/opt/boxen/data/solr/3.6</string>

    <key>StandardErrorPath</key>
    <string>/opt/boxen/log/solr/3.6.error.log</string>

    <key>StandardOutPath</key>
    <string>/opt/boxen/log/solr/3.6.error.log</string>
  </dict>
</plist>
